generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CodeLanguage {
  id               Int          @id
  name             String
  Submission       Submission[]
  compileCommand   String       @default("")
  executionCommand String       @default("")
  testCommand      String       @default("")
}

enum SubmissionStatus {
  Queued
  Successful
  Error
}

model Submission {
  id                   String           @id @default(uuid())
  code                 String
  mainFuncName         String           @default("main")
  stdin                String[]         @default([""])
  stdout               String           @default("")
  codeLanguageId       Int
  codeLanguage         CodeLanguage     @relation(fields: [codeLanguageId], references: [id])
  executionContainerId String           @default("")
  status               SubmissionStatus @default(Queued)
  runtime              Float?
  memoryUsage          Float?
  errorMessage         String?
  createdAt            DateTime         @default(now())
  testCases            TestCase[]
}

model TestCase {
  id             String      @id @default(uuid())
  expectedOutput String
  inputs         String[]
  submission     Submission? @relation(fields: [submissionId], references: [id])
  submissionId   String?
}
